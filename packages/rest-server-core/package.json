{
  "name": "@cedalo/rest-server-core",
  "version": "2.4.0",
  "description": "A server to consume REST messages and publish events.",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "lint": "./node_modules/.bin/eslint .",
    "test": "./node_modules/.bin/jest --runInBand test/routes/MessageRoute.test.js",
    "test-client": "./node_modules/.bin/jest ./test/client/*.js --runInBand --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedalo/streamsheets.git"
  },
  "keywords": [],
  "author": "Cedalo AG",
  "bugs": {
    "url": "https://github.com/cedalo/streamsheets/issues"
  },
  "homepage": "https://github.com/cedalo/streamsheets/tree/master/packages/rest-server-core",
  "devDependencies": {
    "jest": "21.2.1",
    "jest-cli": "23.6.0",
    "sinon": "4.1.2",
    "supertest": "3.0.0"
  },
  "dependencies": {
    "@cedalo/logger": "2.4.0",
    "@cedalo/id-generator": "2.4.0",
    "basic-auth": "2.0.0",
    "body-parser": "1.18.3",
    "cheerio": "1.0.0-rc.2",
    "compression": "1.7.3",
    "eventemitter2": "5.0.1",
    "express": "4.17.1",
    "fs-extra": "9.0.0",
    "http-errors": "1.5.1",
    "mkdirp": "0.5.1",
    "morgan": "1.9.1",
    "request": "2.88.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 90,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "license": "EPL-2.0"
}
