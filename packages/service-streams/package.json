{
  "name": "@cedalo/service-streams",
  "version": "2.1.0",
  "description": "Streams Service",
  "main": "index.js",
  "scripts": {
    "bundle": "npx webpack --config webpack.config.js",
    "lint": "./node_modules/.bin/eslint .",
    "test": "./node_modules/.bin/jest --runInBand --forceExit",
    "retrieve-build-number": "node ./scripts/retrieve-build-number.js",
    "start": "node ./start.js",
    "start:min": "node start.min.js",
    "start-debug": "node --inspect=0.0.0.0 ./start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedalo/streamsheets.git"
  },
  "author": "Cedalo AG",
  "bugs": {
    "url": "https://github.com/cedalo/streamsheets/issues"
  },
  "homepage": "https://github.com/cedalo/streamsheets/tree/master/packages/service-streams",
  "devDependencies": {
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "terser-webpack-plugin": "1.2.2",
    "webpack": "4.29.1",
    "webpack-cli": "3.2.3",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "@cedalo/commons": "2.1.0",
    "@cedalo/stream-file": "2.1.0",
    "@cedalo/stream-kafka": "2.1.0",
    "@cedalo/stream-mail-smtp": "2.1.0",
    "@cedalo/stream-mongodb": "2.1.0",
    "@cedalo/stream-rest-client": "2.1.0",
    "@cedalo/rest-server": "2.1.0",
    "@cedalo/stream-mqtt": "2.1.0",
    "@cedalo/logger": "2.1.0",
    "@cedalo/messaging-client": "2.1.0",
    "@cedalo/protocols": "2.1.0",
    "@cedalo/repository": "2.1.0",
    "@cedalo/sdk-streams": "2.1.0",
    "@cedalo/service-core": "2.1.0",
    "@cedalo/util": "2.1.0",
    "ioredis": "4.6.2",
    "mixwith": "0.1.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  },
  "license": "EPL-2.0"
}
