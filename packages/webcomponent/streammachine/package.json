{
  "name": "@cedalo/streammachine",
  "version": "1.5.0-alpha",
  "description": "Stream Machine Web Component",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "bundle-web": "webpack --config webpack.config.js",
    "test": "npm run bundle-web && (./node_modules/karma/bin/karma start)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedalo/streamsheets.git"
  },
  "author": "Cedalo AG",
  "bugs": {
    "url": "https://github.com/cedalo/streamsheets/issues"
  },
  "homepage": "https://github.com/cedalo/streamsheets/tree/master/packages/webcomponent/streammachine",
  "dependencies": {
    "@cedalo/jsg-core": "*",
    "@cedalo/jsg-ui": "*",
    "@cedalo/number-format": "*",
    "@cedalo/parser": "*",
    "moment": "^2.20.1"
  },
  "devDependencies": {
    "babel-core": "6.25.0",
    "babel-loader": "7.1.1",
    "babel-preset-env": "1.6.0",
    "eslint": "3.19.0",
    "eslint-config-cedalo": "git+ssh://git@github.com/cedalo/eslint-config-cedalo.git",
    "eslint-config-prettier": "3.3.0",
    "jasmine-core": "2.6.4",
    "jest": "20.0.0",
    "jest-cli": "18.1.0",
    "karma": "3.1.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-firefox-launcher": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-safari-launcher": "1.0.0",
    "webpack-cli": "3.2.3"
  },
  "eslintConfig": {
    "extends": [
      "cedalo",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "global-require": 1,
      "no-undef": 1,
      "no-unused-vars": 1
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/gateway-client/test/client/web/"
    ],
    "coveragePathIgnorePatterns": [
      "/test/",
      "/gateway-client/src/client/web/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "license": "EPL-2.0"
}
